      <input type="text" name="name" required>

      <label>Uid</label>
      <input type="text" name="uid" required>

      <label>Sender Number </label>
      <input type="number" name="sender" required>

      <label>ট্রানজ্যাকশন আইডি</label>
      <input type="text" name="trxid" required>

      <div class="radio-group">
        <label><input type="radio" name="method" value="Bkash" required> Bkash</label>
        <label><input type="radio" name="method" value="Nagad"> Nagad</label>
      </div>

      <button type="submit" class="submit-btn">জমা দিন</button>
    </form>
  </div>

  <script>
    const scriptURL = 'https://script.google.com/macros/s/AKfycbyiW-pLevyY-ceFgADzMAIJyVyw4s6eMueZMzfVs_VgEZ7bib5O8H_DY_V9FyUCx5aQqw/exec';
    const form = document.getElementById('payment-form');

    form.addEventListener('submit', e => {
      e.preventDefault();
      fetch(scriptURL, { method: 'POST', body: new FormData(form)})
        .then(response => {
          alert('✅ আপনার তথ্য সফলভাবে জমা হয়েছে!');
          form.reset();
        })
        .catch(error => {
          alert('❌ একটি সমস্যা হয়েছে! দয়া করে আবার চেষ্টা করুন।');
          console.error('Error!', error.message);
        });
    });
  </script>

